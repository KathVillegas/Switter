%nav.navbar.navbar-inverse.navbar-fixed-top
	%div.container-fluid
		.collapse.navbar-collapse
			=image_tag "switter.png", id: "switterImg"
			%ul.nav.navbar-nav.navbar-right
				%form.navbar-form.navbar-left{role: "search"}
					.form-group
						%input.form-control{placeholder: "Search", type: "text"}
						%button.btn.btn-default{type: "submit"} Submit
				%li.dropdown
					%a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
						Account
						%b.caret
					%ul.dropdown-menu
						%li
							= link_to 'Change Password', controller: "users", action: "edit", id: session[:user_id], class: 'btn btn-success'

				%li
					= link_to "Logout", controller: "users", action: "logout"
					
= form_for @user do |f|
		
	%div#changePassword
		.form-group
			= f.label :username
			= f.text_field :username, class:"form-control"
		.form-group
			= f.label :password
			= f.password_field :password, class:"form-control"
		.form-group
			= f.label :"Confirm Password"
			= f.password_field :password_confirmation , class:"form-control"
		.actions
			= f.submit 'Change Password', class:"btn btn-success", id:"signUpButton"
