= form_for @post, :html => { :id => 'form_post'}, :remote => true do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  #postTextboxDiv
    .form-group
      = f.text_area :message, class:"form-control", placeholder: "Enter your Swits here"
    .field
      = f.hidden_field :parent, :value => 0
    #counter
      140 characters remaining
    #buttonSubmit
      .actions
        = f.submit 'Sweet!', class:"btn btn-warning submitButton"



